<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <HBox alignment="CENTER" prefWidth="600" prefHeight="600" style="-fx-background-color: #E9967A" spacing="40">
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="input_1" alignment="CENTER" onAction="#actionPerformed" prefWidth="150" prefHeight="70"
                    text="ClickMeFirst">
            </Button>
            <Label fx:id="output_1" alignment="CENTER" style="-fx-background-color:white" prefHeight="400"
                   prefWidth="150"/>
        </VBox>

        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="input_2" alignment="CENTER" onAction="#actionPerformed" prefWidth="150" prefHeight="70"
                    text="ClickMeSecond">
            </Button>
            <Label fx:id="output_2" alignment="CENTER" style="-fx-background-color:white" prefHeight="400"
                   prefWidth="150"/>
        </VBox>

        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="input_3" alignment="CENTER" onAction="#actionPerformed" prefWidth="150" prefHeight="70"
                    text="ClickMeThird">
            </Button>
            <Label fx:id="output_3" alignment="CENTER" style="-fx-background-color:white" prefHeight="400"
                   prefWidth="150"/>
        </VBox>
    </HBox>
</GridPane>